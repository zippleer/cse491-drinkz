
import sys
import _mypath

from drinkz.load_bulk_data import load_recipes

def main(args):
    if len(args) != 2:
        print >>sys.stderr, 'Usage: %s file_to_load.csv'
        return -1

    filename = args[1]

    fp = open(filename)

    try:
        n = load_recipes(fp)
    finally:
        fp.close()

    print 'Loaded %d recipes.' % n
    return 0


if __name__ == '__main__':
    exit_code = main(sys.argv)
    sys.exit(exit_code)
